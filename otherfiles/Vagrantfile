Vagrant.configure("2") do |config|
    config.vm.box = "ubuntu/trusty64"
    # config.vm.network "private_network", :type => "dhcp"#,
    #    :ip => "192.168.200.0", :netmask => "255.255.255.0"
#    config.vm.synced_folder("/home/r/src/devstack", "/home/vagrant/devstack")
    config.vm.synced_folder("/home/r/src/myutils", "/home/vagrant/myutils")
    config.vm.provider "virtualbox" do |v|
        v.memory = 1024
        v.cpus = 1
    end

    config.vm.define :default do |cfg|
        config.vm.box_check_update = false
        config.vm.network :private_network, ip:"192.168.100.49"
        config.vm.provider "virtualbox" do |v|
            v.memory = 2500
            v.cpus = 2
        end
    end

    # Xenial devstack
    # Currently devstack fails. Currently, private_network fails to provide IP
    config.vm.define :ds do |cfg|
        config.vm.network :private_network, ip:"192.168.100.50"
        config.vm.box = "ubuntu/xenial64"
        config.vm.provider "virtualbox" do |v|
            v.memory = 4000
            v.cpus = 4
        end
    end

    # Trusty devstack
    config.vm.define :dstrusty do |cfg|
        config.vm.network :private_network, ip:"192.168.100.51"
        config.vm.box = "ubuntu/trusty64"
        config.vm.provider "virtualbox" do |v|
            v.memory = 4000
            v.cpus = 4
        end
    end

    # testing tmux
    config.vm.define :tmux do |cfg|
        config.vm.network :private_network, ip:"192.168.100.53"
        config.vm.box = "ubuntu/trusty64"
        config.vm.provider "virtualbox" do |v|
            v.memory = 1000
            v.cpus = 1
        end
    end

    # Redis on xenial
    config.vm.define :redisxenial do |cfg|
        #config.vm.network :private_network, ip:"192.168.100.52"
        config.vm.network "private_network", ip: "192.168.100.52", auto_config: false
        config.vm.provision 'shell', inline: "ifconfig enp0s8 192.168.100.52"
        config.vm.box = "ubuntu/xenial64"
        config.vm.provider "virtualbox" do |v|
            v.memory = 3000
            v.cpus = 4
        end
    end

    config.vm.define :crdb do |cfg|
        config.vm.box_check_update = false
        config.vm.network :private_network, ip:"192.168.100.54"
        config.vm.provider "virtualbox" do |v|
            #v.gui = true
            v.memory = 4500
            v.cpus = 4
        end
    end


